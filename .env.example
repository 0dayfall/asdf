# Server Configuration
ASDF_SERVER_PORT=8080
ASDF_SERVER_HOST=0.0.0.0
ASDF_SERVER_CERT_PATH=/certs/server.crt
ASDF_SERVER_KEY_PATH=/certs/server.key
ASDF_SERVER_ENV=development

# Database Configuration
ASDF_DATABASE_URL=postgres://webfinger:secret@localhost:5432/webfinger?sslmode=disable
ASDF_DATABASE_MAX_OPEN_CONNS=25
ASDF_DATABASE_MAX_IDLE_CONNS=5

# Redis Configuration
ASDF_REDIS_URL=redis://localhost:6379
ASDF_REDIS_PASSWORD=
ASDF_REDIS_DB=0

# Authentication Configuration
ASDF_AUTH_JWT_SECRET=your-very-secure-jwt-secret-key-here-change-this-in-production
ASDF_AUTH_SESSION_SECRET=your-very-secure-session-secret-here-change-this-in-production
ASDF_AUTH_TOKEN_EXPIRY_HOURS=24

# Security Configuration
ASDF_SECURITY_RATE_LIMIT_RPS=10
ASDF_SECURITY_RATE_LIMIT_BURST=20
ASDF_SECURITY_ALLOWED_ORIGINS=*
ASDF_SECURITY_TRUSTED_PROXIES=127.0.0.1,::1
ASDF_SECURITY_ENABLE_CSP=true
ASDF_SECURITY_ENABLE_HSTS=true
ASDF_SECURITY_FORCE_HTTPS=false

# Logging Configuration
ASDF_LOGGING_LEVEL=info
ASDF_LOGGING_FORMAT=json
ASDF_LOGGING_OUTPUT=stdout

# Legacy environment variables for backward compatibility
PORT=8080
DATABASE_URL=postgres://webfinger:secret@localhost:5432/webfinger?sslmode=disable
SSL_CERT_PATH=/certs/server.crt
SSL_KEY_PATH=/certs/server.key
GO_ENV=development